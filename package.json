{
  "name": "flask-booklist",
  "version": "1.0.0",
  "description": "BookList Collection Web Application.",
  "private": true,
  "scripts": {
    "watchCss": "npx tailwindcss -i ./booklist/static/styles/tailwind.css -o ./booklist/static/styles/style.css --watch",
    "buildCss": "npx tailwindcss -i ./booklist/static/styles/tailwind.css -o ./booklist/static/styles/style.css --minify",
    "format": "prettier --write \"**/*.{html,css,js}\"",
    "format:check": "prettier --check \"**/*.{html,css,js}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blueorionn/Flask-BookList.git"
  },
  "author": "Swadhin",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2"
  }
}
